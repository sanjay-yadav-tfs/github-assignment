# Persistent Embedded Database Configuration
# Data will persist between restarts and won't be deleted automatically

# Database Type - SQLite for persistent file-based storage
DB_TYPE=sqlite
DB_DIALECT=sqlite
DB_NAME=database/persistent_user_onboarding.db

# Database Persistence Settings
DB_PERSISTENT=true
DB_AUTO_VACUUM=true
DB_SYNCHRONOUS=NORMAL
DB_JOURNAL_MODE=WAL

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-for-development-only
JWT_EXPIRES_IN=24h

# Redis Configuration (disabled for embedded solution)
REDIS_ENABLED=false

# Server Configuration
PORT=3000
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info

# Database Backup (optional)
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=24