# Azure SQL Database Configuration
DB_HOST=your-server-name.database.windows.net
DB_PORT=1433
DB_NAME=user-onboarding-db
DB_USERNAME=your-admin-username
DB_PASSWORD=your-strong-password
DB_DIALECT=mssql

# Additional Azure SQL options
DB_ENCRYPT=true
DB_TRUST_SERVER_CERTIFICATE=false
DB_REQUEST_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=15000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-azure
JWT_EXPIRES_IN=24h

# Redis Configuration (Azure Redis Cache if using)
REDIS_HOST=your-redis-cache.redis.cache.windows.net
REDIS_PORT=6380
REDIS_PASSWORD=your-redis-key
REDIS_USE_TLS=true

# Server Configuration
PORT=3000
NODE_ENV=production
FRONTEND_URL=https://your-frontend-domain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info